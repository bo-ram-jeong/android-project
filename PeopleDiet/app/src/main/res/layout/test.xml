<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E4E7EA">

        <View
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="#3498DB" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:text="My Page"
            android:textColor="@color/white"
            android:textSize="40dp"
            android:textStyle="bold" />

        <FrameLayout
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="150dp"
            android:background="@drawable/border_layout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.constraintlayout.utils.widget.ImageFilterView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:src="@mipmap/appicon_circle" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="러너랄라"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="runner@ontheriver.com"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="300dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btn_myactivitypage"
                    android:layout_width="170dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/button_style1"
                    android:text="나의 활동"
                    android:textColor="#943b4e"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/btn_mybagepage"
                    android:layout_width="170dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/button_style1"
                    android:paddingLeft="5dp"
                    android:text="How\nMany\nCalories ?"
                    android:textColor="#943b4e"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_arrankingpage"
                    android:layout_width="350dp"
                    android:layout_height="80dp"
                    android:layout_margin="30dp"
                    android:background="@drawable/button_style1"
                    android:paddingLeft="5dp"
                    android:text="나에게 맞는 다이어트 방법은 ?"
                    android:textColor="#943b4e"
                    android:textSize="20dp"
                    android:textStyle="italic" />
                <Button
                    android:id="@+id/btn_setting"
                    android:layout_width="350dp"
                    android:layout_height="80dp"
                    android:layout_margin="30dp"
                    android:background="@drawable/button_style1"
                    android:paddingLeft="5dp"
                    android:text="나에게 맞는 다이어트 방법은 ?"
                    android:textColor="#943b4e"
                    android:textSize="20dp"
                    android:textStyle="italic" />
            </LinearLayout>
        </LinearLayout>


    </FrameLayout>


</LinearLayout>